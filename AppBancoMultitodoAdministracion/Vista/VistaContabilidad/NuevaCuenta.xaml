<Window x:Class="AppBancoMultitodoAdministracion.Vista.VistaContabilidad.NuevaCuenta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppBancoMultitodoAdministracion.Vista.VistaContabilidad" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="NuevaCuenta" Height="450" Width="800">
    <Grid Background="LightBlue">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>

        </Grid.ColumnDefinitions>






        <Border BorderBrush="Black" Background="LightGreen" BorderThickness="1" Grid.Column="0"/>
        <Border BorderBrush="Black" Background="LightCyan" BorderThickness="1" Grid.Column="1"/>

        <TextBlock Text="Datos del cliente" FontSize="20" Grid.Column="0"  HorizontalAlignment="Center"/>
        <TextBlock Text="Datos de la cuenta" FontSize="20" Grid.Column="1"  HorizontalAlignment="Center"/>
        <Label Grid.Column="0"  Content="Cedula:" HorizontalAlignment="Left" Margin="10,102,0,0" VerticalAlignment="Top"/>
        <Label Grid.Column="0"   Content="nombres:" HorizontalAlignment="Left" Margin="10,152,0,0" VerticalAlignment="Top"/>
        <Label Grid.Column="0"  Content="Apellidos:" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center"/>
        <Label Grid.Column="0"   Content="Correo:" HorizontalAlignment="Left" Margin="10,257,0,0" VerticalAlignment="Top"/>
        <Label Grid.Column="0"   Content="Fecha de nacimiento:" HorizontalAlignment="Left" Margin="10,307,0,0" VerticalAlignment="Top"/>
        <TextBox Grid.Column="0"   Name="txt_ced" HorizontalAlignment="Left" Margin="150,102,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="193" Height="31" IsEnabled="false"/>
        <TextBox Grid.Column="0"  Name="txt_nom"  HorizontalAlignment="Left" Margin="150,152,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="193" Height="31" IsEnabled="false"/>
        <TextBox Grid.Column="0"  Name="txt_ape" HorizontalAlignment="Left" Margin="150,206,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="193" Height="32" IsEnabled="false"/>
        <TextBox Grid.Column="0"  Name="txt_cor"  HorizontalAlignment="Left" Margin="150,257,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="193" Height="31" IsEnabled="false"/>
        <DatePicker Grid.Column="0"  Name="txt_fec_nac" HorizontalAlignment="Left" Margin="150,307,0,0"  VerticalAlignment="Top" Width="193" Height="31" IsEnabled="false"/>
        <Button Grid.Column="0" Content="Generar Cuenta" HorizontalAlignment="Left" Margin="150,360,0,0" VerticalAlignment="Top" Height="34" Width="193" Click="Generar_Cuenta"/>
        <Label Grid.Column="1"  Content="Cuenta:"  HorizontalAlignment="Left" Margin="25,102,0,0" VerticalAlignment="Top" Width="137"/>
        <TextBox Grid.Column="1"   Name="txt_cuenta"  HorizontalAlignment="Left" Margin="125,102,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="192" Height="31" IsEnabled="false" />
        <Label Grid.Column="1"  Content="Clave:"  HorizontalAlignment="Left" Margin="25,152,0,0" VerticalAlignment="Top" Width="137"/>
        <TextBox Grid.Column="1"   Name="txt_clave_cuenta"  HorizontalAlignment="Left" Margin="125,152,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="192" Height="31" IsEnabled="false" />
        <Label Grid.Column="1"  Content="Saldo Inicial:"  HorizontalAlignment="Left" Margin="25,217,0,0" VerticalAlignment="Top" Width="137"/>
        <xctk:DecimalUpDown Grid.Column="1" Name="txt_saldo" Minimum="0.0" Margin="125,202,83,181" IsEnabled="false"/>
        <Button Grid.Column="1" Name="btn_crear_cuenta" Content="Crear Cuenta" HorizontalAlignment="Left" Margin="124,303,0,0" VerticalAlignment="Top" Height="34" Width="193" IsEnabled="False" Click="Crear_Cuenta"/>
        <Label Grid.Column="1" Content="Label" HorizontalAlignment="Left" Height="32" Margin="549,206,0,0" VerticalAlignment="Top" Width="9"/>

    </Grid>
</Window>
