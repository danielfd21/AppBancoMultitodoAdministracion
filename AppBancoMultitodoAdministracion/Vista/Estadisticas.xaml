<Window x:Class="AppBancoMultitodoAdministracion.Vista.Estadisticas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="Estadisticas" Height="450" Width="800">
    <Grid>

        <lvc:PieChart Series="{Binding PieSeries}" DataClick="Chart_OnDataClick">
            <lvc:PieChart.LegendLocation>Right</lvc:PieChart.LegendLocation>
        </lvc:PieChart>


    </Grid>
</Window>
